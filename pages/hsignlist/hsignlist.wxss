/* pages/hsignlist/hsignlist.wxss */
.list_num {
  display: flex;
  justify-content: center;
  color: grey;
  margin-top:5px;
}

.list_top {
  height: 40px;
  width: 345px;
  display: flex;
  justify-content: space-between;
  font-size: 12pt;
  margin-left: 15px;
  margin-right: 15px;
  margin-bottom:7px;
  margin-top:10px;
  border-radius: 5px; /*圆角弧度 */
  border-color: black; /*边框颜色 */
  background-color: rgb(176, 248, 186);
}

.list {
  display: flex;
  justify-content: space-between;
  font-size: 10pt;
  margin-left: 5px;
  margin-right: 5px;
}
.signTime{
  display: flex;
  align-items: center;
  font-size: 8pt;
  color: gainsboro;
}
.sname{
  font-size: 16pt;
  position: absolute;
  right:10px;
}
.snum{
  font-size: 16pt;
  position: absolute;
  left:10px;
}
.box{
  height: 40px;
  width: 360px;
  margin-top: 3px;
  margin-left: 20rpx;
  margin-right: 20rpx;
  border-radius: 5px; /*圆角弧度 */
  border-color: black; /*边框颜色 */
  background-color: rgb(212, 241, 216);
  padding-left:5px;
  position: relative;
}
